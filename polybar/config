[module/i3]
type = internal/i3
format = <label-state>
index-sort = true
wrapping-scroll = true
strip-wsnumbers = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

; focused = Active workspace on focused monitor
label-focused = "%{B#888 F#000}%{T3}ÓÇ∞%{T-}%{F-B-} %name% %{B#000 F#888}%{T3}ÓÇ∞%{T-}%{F-B-}"
label-focused-background = ${colors.background-0}
label-focused-foreground = ${colors.background-3}

; unfocused = Inactive workspace on any monitor
label-unfocused = "%{B#222 F#000}%{T3}ÓÇ∞%{T-}%{F-B-} %name% %{B#000 F#222}%{T3}ÓÇ∞%{T-}"
label-unfocused-background = ${colors.background-1}
label-unfocused-foreground = ${colors.foreground}

; visible = Active workspace on unfocused monitor
label-visible = "%{B#666 F#000}%{T3}ÓÇ∞%{T-}%{F-B-} %name% %{B#000 F#666}%{T3}ÓÇ∞%{T-}%{F-B-}"
label-visible-background = ${colors.background-0}
label-visible-foreground = ${colors.background-3}

; urgent = Workspace with urgency hint set
